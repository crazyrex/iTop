    <!--<transformation writer="twig" source="templates/combodo-wiki/reports/markers.html.twig" artifact="reports/markers.html"/>-->
    <!--<transformation writer="twig" source="templates/combodo-wiki/reports/errors.html.twig" artifact="reports/errors.html"/>-->
    <transformation writer="twig" source="templates/combodo-wiki/reports/deprecated.html.twig" artifact="reports/deprecated.txt"/>
    <transformation writer="twig" source="templates/combodo-wiki/graphs/class.html.twig" artifact="graphs/class.txt"/>
    
    <transformation writer="Graph" source="Class" artifact="graphs/classes.svg" />
  </transformations>
</template>
