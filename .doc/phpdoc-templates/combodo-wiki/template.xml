    <!--<transformation writer="twig" query="indexes.namespaces" source="templates/combodo-wiki/namespace.html.twig" />-->
    <transformation writer="twig" query="indexes.classes" source="templates/combodo-wiki/class.txt.twig" artifact="{{path}}.txt"/>
    <transformation writer="twig" query="indexes.interfaces" source="templates/combodo-wiki/interface.txt.twig" />
    <transformation writer="twig" query="indexes.traits" source="templates/combodo-wiki/class.txt.twig"  />
    <transformation writer="twig" query="files" source="templates/combodo-wiki/file.txt.twig" />
